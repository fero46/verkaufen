<%- model_class = Ad -%>
<div class="page-header">
  <h1><%=t '.title', :default => Ad %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:user_id) %></dt>
      <dd><pre class="prettyprint"><%= @ad.user_id %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:titel) %></dt>
      <dd><pre class="prettyprint"><%= @ad.titel %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:description) %></dt>
      <dd><pre class="prettyprint"><%= @ad.description %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:price) %></dt>
      <dd><pre class="prettyprint"><%= @ad.price %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:price_type) %></dt>
      <dd><pre class="prettyprint"><%= @ad.price_type %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:postal_code) %></dt>
      <dd><pre class="prettyprint"><%= @ad.postal_code %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:place_id) %></dt>
      <dd><pre class="prettyprint"><%= @ad.place_id %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:street) %></dt>
      <dd><pre class="prettyprint"><%= @ad.street %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:ad_type) %></dt>
      <dd><pre class="prettyprint"><%= @ad.ad_type %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:contact_name) %></dt>
      <dd><pre class="prettyprint"><%= @ad.contact_name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:phonenumber) %></dt>
      <dd><pre class="prettyprint"><%= @ad.phonenumber %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:in_galery) %></dt>
      <dd><pre class="prettyprint"><%= @ad.in_galery %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:galery_end) %></dt>
      <dd><pre class="prettyprint"><%= @ad.galery_end %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:top_ad) %></dt>
      <dd><pre class="prettyprint"><%= @ad.top_ad %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:top_ad_end) %></dt>
      <dd><pre class="prettyprint"><%= @ad.top_ad_end %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:highlight) %></dt>
      <dd><pre class="prettyprint"><%= @ad.highlight %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:highlight_end) %></dt>
      <dd><pre class="prettyprint"><%= @ad.highlight_end %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:repeat_to_top) %></dt>
      <dd><pre class="prettyprint"><%= @ad.repeat_to_top %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:repeat_to_top_end) %></dt>
      <dd><pre class="prettyprint"><%= @ad.repeat_to_top_end %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:main_image) %></dt>
      <dd><pre class="prettyprint"><%= @ad.main_image %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:category_id) %></dt>
      <dd><pre class="prettyprint"><%= @ad.category_id %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              ads_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_ad_path(@ad), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              ad_path(@ad),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

